<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add-new-tables" author="Gonza">
        <comment>
            Добавление таблиц Role, User и UserRole
        </comment>

        <createTable tableName="user">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_user"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" checkConstraint="username >= 4"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" checkConstraint="password >= 8"/>
            </column>
            <column name="password_confirm" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="person_data_id" type="BIGINT">
                <constraints nullable="false" unique="true" references="person_data(id)" foreignKeyName="fk_person_data_user"/>
            </column>
        </createTable>

        <createTable tableName="role">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_role"/>
            </column>
            <column name="role_name" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        
        <createTable tableName="user_role">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role" references="user(id)" foreignKeyName="fk_user"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role" references="role(id)" foreignKeyName="fk_role"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>