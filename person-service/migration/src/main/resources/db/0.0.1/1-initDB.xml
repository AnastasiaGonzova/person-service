<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-tables" author="Gonza">
        <comment>
            Первоначальная структура базы данных
        </comment>

        <createTable tableName="medical_card">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_medical_card"/>
            </column>
            <column name="client_status" type="CHAR(5)"/>
            <column name="med_status" type="CHAR(5)"/>
            <column name="registry_dt" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="comment_about" type="TEXT"/>
        </createTable>

        <createTable tableName="illness">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_illness"/>
            </column>
            <column name="medical_card_id" type="BIGINT">
                <constraints references="medical_card(id)" foreignKeyName="fk_medical_card_illness"/>
            </column>
            <column name="type_id" type="BIGINT"/>
            <column name="heaviness" type="CHAR(1)"/>
            <column name="appearance_dttm" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="recovery_dt" type="DATE"/>
        </createTable>

        <createTable tableName="contact">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_contact"/>
            </column>
            <column name="phone_number" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(128)"/>
            <column name="profile_link" type="TEXT"/>
        </createTable>

        <createTable tableName="address">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_address"/>
            </column>
            <column name="contact_id" type="BIGINT">
                <constraints references="contact(id)" foreignKeyName="fk_contact_address"/>
            </column>
            <column name="country_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="post_code" type="INTEGER"/>
            <column name="street" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="building" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="flat" type="VARCHAR(32)"/>
        </createTable>

        <createTable tableName="person_data">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_person_data"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_dt" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="SMALLINT"/>
            <column name="sex" type="CHAR(1)"/>
            <column name="contact_id" type="BIGINT">
                <constraints references="contact(id)" foreignKeyName="fk_contact_person_data"/>
            </column>
            <column name="medical_card_id" type="BIGINT">
                <constraints unique="true" references="medical_card(id)" foreignKeyName="fk_medical_card_person_data"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints references="person_data(id)" foreignKeyName="fk_person_parent" checkConstraint="parent_id != id"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>